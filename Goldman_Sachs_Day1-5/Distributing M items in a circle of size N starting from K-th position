link - https://www.geeksforgeeks.org/distributing-m-items-circle-size-n-starting-k-th-position/


#include"bits/stdc++.h"
using namespace std;

int main()
{
    int n,m,k;
    cout<<"enter n,ma nd k value"<<endl;
    cin>>n>>m>>k;
    if(n>=m)
        cout<<(k+m-1)%n;
    else
        cout<<(m%n)+k-1;
    return 0;
}
